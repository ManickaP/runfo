@page "{id:int}"

@using Octokit
@model IssueModel
@{
    ViewData["Title"] = "Issue Tracking";
}


<div>
    @Model.SearchText
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="column">Build</th>
            <th scope="column">Job Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var issueData in @Model.Results)
        {
            <tr>
                <td><a href=@issueData.BuildUri>@issueData.BuildNumber</a>
                <td>@issueData.JobName</td>
            </tr>
        }
    </tbody>
</table>
