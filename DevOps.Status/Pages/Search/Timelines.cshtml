@page
@model DevOps.Status.Pages.Search.TimelinesModel
@{
    ViewData["Title"] = "Timelines";
}

<form method="get">
  <div class="form-group">
    <label>Build Query</label>
    <input name="bq" type="text" class="form-control" value="@Model.BuildQuery">
    <label>Timeline Query</label>
    <input name="tq" type="text" class="form-control" value="@Model.TimelineQuery">
  </div>
  <button class="btn btn-primary">Search</button>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
      @Model.ErrorMessage
    </div>
}

@if (Model.BuildCount is { } count)
{
    <p>Build Count: @count</p>
    <h3>Results</h3>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="column">Build</th>
                <th class="column">Job</th>
                <th class="column">Text</th>
                @if (Model.IncludeIssueTypeColumn)
                {
                    <th class="column">Type</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var timelineData in Model.TimelineDataList)
            {
                <tr>
                    <td><a href=@timelineData.BuildUri>@timelineData.BuildNumber</a></td>
                    <td>@timelineData.JobName</td>
                    <td>@timelineData.Line</td>
                    @if (Model.IncludeIssueTypeColumn)
                    {
                        <td>@timelineData.IssueType</td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            @if (Model.PreviousPageNumber is { } previousPageNumber)
            {
                <li class="page-item">
                    <a 
                       class="page-link"
                       asp-page="/Search/Timelines"
                       asp-route-bq="@Model.BuildQuery"
                       asp-route-tq="@Model.TimelineQuery"
                       asp-route-pageNumber="@previousPageNumber">Previous
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
            }
            @if (Model.NextPageNumber is { } nextPageNumber)
            {
                <li class="page-item">
                    <a 
                       class="page-link"
                       asp-page="/Search/Timelines"
                       asp-route-bq="@Model.BuildQuery"
                       asp-route-tq="@Model.TimelineQuery"
                       asp-route-pageNumber="@nextPageNumber">Next
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Next</a>
                </li>
            }
      </ul>
    </nav>
}

