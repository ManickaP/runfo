@page
@model DevOps.Status.Pages.Search.TimelinesModel
@{
    ViewData["Title"] = "Timelines";
}

<form method="get">
  <div class="form-group">
    <label>Build Query</label>
    <input name="bq" type="text" class="form-control" value="@Model.BuildQuery">
    <label>Timeline Query</label>
    <input name="tq" type="text" class="form-control" value="@Model.TimelineQuery">
  </div>
  <button class="btn btn-primary">Search</button>
</form>

<h1>Timelines</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="column">Build</th>
            <th class="column">Job</th>
            <th class="column">Text</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var timelineData in Model.TimelineDataList)
        {
            <tr>
                <td><a href=@timelineData.BuildUri>@timelineData.BuildNumber</a></td>
                <td>@timelineData.JobName</td>
                <td>@timelineData.Line</td>
            </tr>
        }
    </tbody>
</table>

