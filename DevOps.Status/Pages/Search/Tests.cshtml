@page
@model TestsModel
@using Microsoft.AspNetCore.Html

@{
    ViewData["Title"] = "Tests Search";
}

<form method="get">
  <div class="form-group">
    <label>Query</label>
    <input name="q" type="text" class="form-control" value="@Model.QueryString">
  </div>
  <button class="btn btn-primary">Search</button>
</form>

<div id="accordion">
    @foreach(var testInfo in @Model.TestInfos)
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#@testInfo.CollapseName">
                    @testInfo.TestName (@testInfo.Results.Count)
                    </button>
                </h5>
            </div>

            <div id="@testInfo.CollapseName" class="collapse" data-parent="#accordion">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="column">Build</th>
                            <th scope="column">Helix Console</th>
                            <th scope="column">Helix Run Client</th>
                            <th scope="column">Helix Core Dump</th>
                            <th scope="column">Helix Test Results</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in testInfo.Results)
                        {
                            <tr>
                                <td><a href=@result.BuildUri>@result.BuildNumber</a></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(result.HelixConsoleUri))
                                    {
                                        <a href=@result.HelixConsoleUri target="_blank">Console</a>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(result.HelixRunClientUri))
                                    {
                                        <a href=@result.HelixRunClientUri target="_blank">Run Client</a>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(result.HelixCoreDumpUri))
                                    {
                                        <a href=@result.HelixCoreDumpUri target="_blank">Core Dump</a>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(result.HelixTestResultsUri))
                                    {
                                        <a href=@result.HelixTestResultsUri target="_blank">Test Results</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div>
                    <a asp-route-q=@Model.InitialSearchText asp-route-testName=@testInfo.TestName>Filter to this test</a>
                </div>
            </diV>
        </div>
    }
</div>
