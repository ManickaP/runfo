@page "{id:int}"

@using Octokit
@model TrackingIssueModel
@{
    ViewData["Title"] = "Issue Tracking";
}

<h3>Tracking Issue</h3>
<form method="post">
    <div class="form-group">
        <label for="searchKind">Search Text</label>
        <input class="form-control" placeholder="@Model.SearchText" readonly />
    </div>

    <div class="form-group">
        <label for="searchKind">Tracking Kind</label>
        <input class="form-control" placeholder="@Model.TrackingKind" readonly />
    </div>

    <div class="form-group">
        <label for="searchKind">Build Definition Name</label>
        <input class="form-control" placeholder="@Model.Definition" readonly />
    </div>

    <!--<button type="submit" class="btn btn-primary">Create</button> -->
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
      @Model.ErrorMessage
    </div>
}

<h3>Results</h3>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Build</th>
            <th scope="col">Kind</th>
            <th scope="col">Job Name</th>
            <th scope="col">Attempt</th>
            <th scope="col">Repository</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var issueData in @Model.Results)
        {
            <tr>
                <td><a href=@issueData.BuildUri>@issueData.BuildNumber</a>
                <td>@issueData.BuildKind</td>
                <td>@issueData.JobName</td>
                <td>@issueData.Attempt</td>
                <td><a href=@issueData.RepositoryUri>@issueData.RepositoryName</a>
            </tr>
        }
    </tbody>
</table>

@if (Model.IsActive)
{
    <h3 class="mt-3">Populate Results</h3>
    <form method="post">
        <div class="form-group">
            <label for="searchKind">Builds to Search</label>
            <input class="form-control" asp-for="PopulateCount" />
        </div>
        <input type="hidden" name="id" value="@Model.ModelTrackingIssueId" />
        <input type="hidden" name="close" value="false" />
        <button type="submit" class="btn btn-primary">Populate</button>
    </form>

    <h3 class="mt-3">Close the Tracking Issue</h3>
    <form method="post">
        <input type="hidden" name="id" value="@Model.ModelTrackingIssueId" />
        <input type="hidden" name="close" value=true />
        <button type="submit" class="btn btn-primary">Close</button>
    </form>
}
