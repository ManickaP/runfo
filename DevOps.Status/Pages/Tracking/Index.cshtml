@page
@model TrackingIndexModel
@{
    ViewData["Title"] = "Tracking Issues";
}

<table class="table">
    <thead>
        <tr>
            <th scope="column">Text</th>
            <th scope="column">Kind</th>
            <th scope="column">Week Count</th>
            <th scope="column">Total Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var issueData in @Model.Issues)
        {
            <tr>
                <td><a asp-page="issue" asp-route-id=@issueData.Id>@issueData.SearchText</a></td>
                <td>@issueData.Kind</td>
                <td>@issueData.WeekCount</td>
                <td>@issueData.TotalCount</td>
            </tr>
        }
    </tbody>
</table>